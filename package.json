{
    "name": "posthog-currency-normalization-plugin",
    "version": "0.0.2",
    "description": "Convert ingested payment values between currencies",
    "main": "index.js",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PostHog/posthog-currency-normalization-plugin.git"
    },
    "author": "Marius Andra <marius.andra@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/PostHog/posthog-currency-normalization-plugin/issues"
    },
    "homepage": "https://github.com/PostHog/posthog-currency-normalization-plugin#readme",
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/.bin/jest --env=node"
    },
    "config": {
        "openExchangeRatesApiKey": {
            "name": "OpenExchangeRates API Key",
            "type": "string",
            "default": "",
            "required": true
        },
        "normalizedCurrency": {
            "name": "Currency to normalise to (e.g. \"EUR\")",
            "type": "string",
            "default": "",
            "required": true
        },
        "amountProperty": {
            "name": "Property key for the amount",
            "type": "string",
            "default": "amount",
            "required": true
        },
        "currencyProperty": {
            "name": "Property key for the currency",
            "type": "string",
            "default": "currency",
            "required": true
        },
        "normalizedAmountProperty": {
            "name": "Property key for the normalized amount",
            "type": "string",
            "default": "normalized_amount",
            "required": true
        },
        "normalizedCurrencyProperty": {
            "name": "Property key for the normalized currency",
            "type": "string",
            "default": "normalized_currency",
            "required": true
        }
    },
    "devDependencies": {
        "jest": "^26.6.3",
        "posthog-plugins": "^0.2.0"
    }
}
